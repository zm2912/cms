{
    "restartable": "rs",
    "ignore": [
        ".git",
        ".svn",
        "node_modules/**/node_modules"
    ],
    "verbose": false,
    "execMap": {
        "js": "node --harmony"
    },
    "watch": [
        "./build/**",
        "./server/**",
        "./server.js"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js json"
}